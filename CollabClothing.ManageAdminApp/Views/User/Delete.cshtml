@model CollabClothing.ViewModels.System.Users.UserDeleteRequest

@{
    ViewData["Title"] = "Xác nhận xóa tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xác nhận xóa tài khoản</h1>
<div class="page-header">
 <div class="header-sub-title">
  <nav class="breadcrumb breadcrumb-dash">
   <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
   <a class="breadcrumb-item" asp-controller="User" asp-action="Index">Danh sách tài khoản</a>
   <a class="breadcrumb-item" asp-controller="User" asp-action="Delete">Xóa tài khoản</a>
  </nav>
 </div>
</div>
<h3>Bạn có muốn xóa tài khoản?</h3>
<div>
    <h4>Xác nhận xóa tài khoản</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input asp-for="Id" type="hidden"/>
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở lại</a>
    </form>
</div>
