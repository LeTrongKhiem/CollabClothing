    <script>
        function registerChart(lsData) {
            let categoryname = lsData.map((item) => item.nameCategory);
            let total = lsData.map((item) => item.tongcong);
            var xValues = [categoryname];
            console.log(xValues)
            var yValues = [total];
            var barColors = [
                "#b91d47",
                "#00aba9",
                "#2b5797",
                "#e8c3b9",
                "#1e7145"
            ];

            new Chart("myChart", {
                type: "pie",
                data: {
                    labels: xValues,
                    datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                    }]
                },
                options: {
                    title: {
                        display: true,
                        text: "World Wide Wine Production 2018"
                    }
                }
            });
        }
        $('body').on('click', '.btn-submit-day', function (e) {
            e.preventDefault();
            const selectdayfrom = $('#select-day-from').val();
            //const selectdayto = $('#select-day-to').val();
            $.ajax({
                type: "GET",
                url: '/Statistic/GetAll/',
                success: function (response) {
                    registerChart(response)
                    console.log(response)
                },
                data: {
                    fromDate: selectdayfrom,
                    //toDate : selectdayto
                },
            });
        })
    </script>
