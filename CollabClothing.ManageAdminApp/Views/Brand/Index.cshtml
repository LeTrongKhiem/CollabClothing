@using CollabClothing.ViewModels.Common
@model PageResult<CollabClothing.ViewModels.Catalog.Brands.BrandViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Tên thương hiệu
            </th>
            <th>
                Thông tin
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Slug
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Images)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
              <button class="btn btn-icon btn-hover btn-sm btn-rounded">
                <a asp-controller="Brand" asp-action="Details" asp-route-id="@item.Id">
                 <i class="anticon anticon-eye"></i>
                </a>
               </button>
               <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                <a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id">
                 <i class="anticon anticon-edit"></i>
                </a>

               </button>
               <button class="btn btn-icon btn-hover btn-sm btn-rounded">
                <a asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id">
                 <i class="anticon anticon-delete"></i>
                </a>
               </button>
            </td>
        </tr>
}
    </tbody>
</table>
