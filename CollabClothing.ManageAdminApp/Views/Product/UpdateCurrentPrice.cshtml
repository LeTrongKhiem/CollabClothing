@model CollabClothing.ViewModels.Catalog.Products.ProductEditRequest

@{
    ViewData["Title"] = "Cập nhật giá hiện tại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCurrentPrice">
            <div class="form-group">
                <label asp-for="PriceCurrent" class="control-label"></label>
                <input asp-for="PriceCurrent" class="form-control" />
                <span asp-validation-for="PriceCurrent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại</a>
</div>

