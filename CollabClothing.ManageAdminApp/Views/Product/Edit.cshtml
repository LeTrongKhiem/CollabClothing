@model CollabClothing.ViewModels.Catalog.Products.ProductEditRequest

@{
	ViewData["Title"] = "Cập nhật sản phẩm";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration; // lay duong dan localhost:5001
@section Csss {
	<link href="~/css/select2.min.css" rel="stylesheet" />
}
@section Scripts{
<script src="https://cdn.ckeditor.com/ckeditor5/34.0.0/classic/ckeditor.js"></script>
<script src="~/js/select2.min.js"></script>
<script>
	$(document).ready(function(){
		$('#multi-append').select2({
			multiple:true,
			tags:true
		});
	})
</script>
<script>
	ClassicEditor
	.create( document.querySelector( '#txt_details' ), {
	
	} )
	.then( editor => {
		window.editor = editor;
	} )
	.catch( err => {
		console.error( err.stack );
	} );
</script>
}
<style>
 .ck-editor__editable_inline {
  min-height: 400px;
 }
</style>
<div class="page-header">
 <div class="header-sub-title">
  <nav class="breadcrumb breadcrumb-dash">
   <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
   <a class="breadcrumb-item" asp-controller="Product" asp-action="Index">Danh sách sản phẩm</a>
   <a class="breadcrumb-item" asp-controller="Product" asp-action="Edit">Cập nhật sản phẩm</a>
  </nav>
 </div>
</div>
<div class="row">
 <div class="col-md-12">
  <form asp-action="Edit" enctype="multipart/form-data" method="post">
   <div asp-validation-summary="All" class="text-danger"></div>
   <div class="form-group">
	<label asp-for="ProductName" class="control-label"></label>
	<input asp-for="ProductName" class="form-control" />
	<span asp-validation-for="ProductName" class="text-danger"></span>
   </div>
   <div class="form-group">
	<label asp-for="Description" class="control-label"></label>
	<input asp-for="Description" class="form-control" />
	<span asp-validation-for="Description" class="text-danger"></span>
   </div>
   <div class="row">
	<div class="form-group col-md-6">
	 <label asp-for="BrandId" class="control-label"></label>
	 <input asp-for="BrandId" class="form-control" />
	 <span asp-validation-for="BrandId" class="text-danger"></span>
	</div>
	<div class="form-group col-md-6">
	 <label asp-for="Slug" class="control-label"></label>
	 <input asp-for="Slug" class="form-control" />
	 <span asp-validation-for="Slug" class="text-danger"></span>
	</div>
   </div>
   <div class="row">
	<div class="form-group">
	 <label asp-for="ImagePath" class="control-label"></label>
	 <img src="@Configuration["BaseAddress"]@Model.ImagePath" width="120px" height="120px" style="margin-left: 50px;" />
	 <span asp-validation-for="ImagePath" class="text-danger"></span>
	</div>
	<div class="form-group">
	 <label asp-for="ThumbnailImage" class="control-label"></label>
	 <input asp-for="ThumbnailImage" class="form-control" type="file" />
	 <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
	</div>
   </div>
   <div class="row">
	<div class="form-group col-md-2">
	 <label asp-for="Consumer" class="control-label"></label>
	 <select asp-for="Consumer" class="custom-select">
	  <option value="" disabled selected>Chọn người sử dụng</option>
	  <option value="true">Nam</option>
	  <option value="false">Nữ</option>
	 </select>
	 <span asp-validation-for="Consumer" class="text-danger"></span>
	</div>
	<div class="form-group col-md-2">
	 <label asp-for="Type" class="control-label"></label>
	 <input asp-for="Type" class="form-control" type="text" />
	 <span asp-validation-for="Type" class="text-danger"></span>
	</div>
	<div class="form-group col-md-3">
	 <label asp-for="Form" class="control-label"></label>
	 <input asp-for="Form" class="form-control" type="text" />
	 <span asp-validation-for="Form" class="text-danger"></span>
	</div>

	<div class="form-group col-md-3">
	 <label asp-for="Cotton" class="control-label"></label>
	 <select asp-for="Cotton" class="custom-select">
	  <option value="" disabled selected>Chọn chất liệu</option>
	  <option value="true">Vải thun Cotton co giãn 4 chiều</option>
	  <option value="false">Vải thun Cotton co giãn 2 chiều</option>
	 </select>
	 <span asp-validation-for="Cotton" class="text-danger"></span>
	</div>
	<div class="form-group col-md-2">
	 <label asp-for="MadeIn" class="control-label"></label>
	 <input asp-for="MadeIn" class="form-control" type="text" />
	 <span asp-validation-for="MadeIn" class="text-danger"></span>
	</div>
   </div>
   <div class="form-group">
	<label asp-for="Details" class="control-label"></label>
	<textarea id="txt_details" asp-for="Details" rows="10" class="form-control"></textarea>
	<span asp-validation-for="Details" class="text-danger"></span>
   </div>
   <div class="form-group">
	<input type="submit" value="Lưu" class="btn btn-primary" />
   </div>

  </form>
 </div>
</div>

<div>
 <a asp-action="Index">Trở lại</a>
</div>

